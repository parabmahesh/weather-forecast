<mvc:View xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" controllerName="demo.weatherforecast.controller.App" displayBlock="true">
	<App>
		<Page>
			<customHeader>
				<Bar>
					<contentLeft>
						<core:Icon src="sap-icon://cloud"></core:Icon>
						<Title text="{i18n>TITLE}"></Title>
					</contentLeft>
				</Bar>
			</customHeader>
			<content>
				<HBox alignContent="Center" justifyContent="Center">
					<items>
						<ComboBox placeholder="Enter city..." items="{
									path: '/CitiesCollection',
									sorter: { path: 'text' }
								}">
							<core:Item key="{key}" text="{text}" />
						</ComboBox>
					</items>
				</HBox>
				<HBox align="Center" justifyContent="Center">
					<items>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Cumulative Totals" subheader="Expenses" press="press">
							<TileContent unit="Unit" footer="Footer Text">
								<NumericContent value="1762" icon="sap-icon://line-charts" withMargin="false" />
							</TileContent>
						</GenericTile>
					</items>
				</HBox>
			</content>
		</Page>
	</App>
</mvc:View>
